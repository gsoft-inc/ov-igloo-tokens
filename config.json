{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "custom/scss",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "css": {
      "transformGroup": "custom/css",
      "buildPath": "dist/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables"
        }
      ]
    },
    "docs": {
      "transformGroup": "custom/scss",
      "buildPath": "docs/",
      "files": [
        {
          "destination": "tokens.scss",
          "format": "custom/doc"
        }
      ]
    }
  }
}
